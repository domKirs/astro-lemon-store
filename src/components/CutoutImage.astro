---
const { id, href, d } = Astro.props;
---

<div class="cutout">
  <svg class="cutout-svg" width="100%" height="100%" viewBox="0 0 650 648" fill="none" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
    <defs>
      <pattern id={id} patternUnits="objectBoundingBox" width="1" height="1">
        <image href={href} x="0" y="0" width="100%" height="100%" class="pattern-image" preserveAspectRatio="xMidYMid slice"></image>
      </pattern>
    </defs>
    <path d={d} fill={`url(#${id})`} />
  </svg>
</div>